<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    tools:context=".RegistrationActivity"
    android:background="@drawable/bgn"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
        android:layout_height="80dp"
        android:layout_width="170dp"
        android:id="@+id/farmer"
        android:src="@drawable/farmer"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/processor"
        android:src="@drawable/processor"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/farmer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/supplier"
        android:src="@drawable/supplier"
        android:layout_alignTop="@+id/processor"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/warehouse"
        android:src="@drawable/warehouse"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/processor"
        android:layout_alignRight="@+id/processor"
        android:layout_alignEnd="@+id/processor"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/logistics"
        android:src="@drawable/logistics"
        android:layout_alignTop="@+id/warehouse"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/trader"
        android:src="@drawable/trader"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/warehouse"
        android:layout_alignStart="@+id/warehouse"
        android:layout_alignLeft="@+id/warehouse"/>

    <ImageView
        android:layout_height="70dp"
        android:layout_width="160dp"
        android:id="@+id/vendor"
        android:src="@drawable/vendor"
        android:layout_alignTop="@+id/trader"
        android:layout_alignStart="@+id/logistics"
        android:layout_alignLeft="@+id/logistics"/>

</RelativeLayout>

</FrameLayout>