<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

    </style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/violet</item>
        <item name="actionMenuTextColor">@color/violet</item>

    </style>
    <style name="BottomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style parent="@android:style/Theme.Dialog" name="AlertDialogCustom">

        <item name="android:textColor">#00FF00</item>

        <item name="android:typeface">monospace</item>

        <item name="android:textSize">10sp</item>

    </style>


    <style parent="@android:style/TextAppearance.Holo.DialogWindowTitle" name="CustomDialogWindowTitle">

        <item name="android:textColor">@android:color/holo_green_light</item>

        <item name="android:textStyle">bold</item>

    </style>


    <style parent="@android:style/Theme.Holo.Dialog" name="CustomAlertDialogTheme">

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>

        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

        <item name="android:windowTitleStyle">@style/CustomDialogWindowTitle</item>

        <item name="android:textAppearanceMedium"> @android:style/TextAppearance.Holo.DialogWindowTitle </item>

    </style>


    <style parent="Theme.AppCompat.Light.Dialog.Alert" name="AnotherCustomAlertDialogTheme">
        <item name="android:windowTitleStyle">@style/CustomDialogWindowTitle</item>

        <item name="colorAccent">@android:color/holo_green_light</item>

    </style>

    <style name="colorCheck">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>
